<UserControl x:Class="MVVM_Learning.Views.CabinetListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Learning.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="LightGray">

    <Grid>
        <ListView x:Name="ListViewItems" 
                  Margin="20" 
                  Height="200" 
                  ItemsSource="{Binding Cabinets}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Width" DisplayMemberBinding="{Binding Width}" Width="100"/>
                    <GridViewColumn Header="Height" DisplayMemberBinding="{Binding Height}" Width="100"/>
                    <GridViewColumn Header="Depth" DisplayMemberBinding="{Binding Depth}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>