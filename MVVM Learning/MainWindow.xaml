<Window x:Class="MVVM_Learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Learning"
        xmlns:viewmodels="clr-namespace:MVVM_Learning.ViewModels"
        xmlns:views="clr-namespace:MVVM_Learning.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <TabControl>
            <TabItem Header="Cabinet View">
                <views:BaseCabinetView/>
            </TabItem>
            <TabItem Header="Cabinet List">
                <views:CabinetListView/>
            </TabItem>
            <TabItem Header="Another View">
                <!-- Another view can be placed here -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>