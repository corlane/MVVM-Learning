<UserControl x:Class="CorlaneCabinetOrderFormV3.Views.Cabinet3DView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CorlaneCabinetOrderFormV3.Views"
             xmlns:viewmodels="clr-namespace:CorlaneCabinetOrderFormV3.ViewModels"    
             xmlns:Converters="clr-namespace:CorlaneCabinetOrderFormV3.Converters"
             xmlns:Models="clr-namespace:CorlaneCabinetOrderFormV3.Models"
             xmlns:helpers="clr-namespace:CorlaneCabinetOrderFormV3.Helpers"
             xmlns:HelixToolkit="http://helix-toolkit.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="1200"
             d:Background="DarkGray"
             
             >

    <!-- Design-time DataContext (so intellisense will work) -->
    <d:UserControl.DataContext>
        <viewmodels:Cabinet3DViewModel/>
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="#FF222222">
        <HelixToolkit:HelixViewport3D x:Name="viewport" Grid.Column="0" Grid.Row="0" ZoomExtentsWhenLoaded="False" ModelUpDirection="0,1,0" Background="Gray" Margin="10"
                               helpers:ZoomExtentsHelper.Bounds="{Binding PreviewBounds}"
							   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
							   BorderThickness="5" BorderBrush="#FF555555" 
							   ShowCameraTarget="False"
							   ViewCubeBackText = "BK"
							   ViewCubeFrontText = "F"
							   ViewCubeRightText = "L"
							   ViewCubeLeftText = "R"
							   ViewCubeBottomText = "B"
							   ViewCubeTopText = "T"
							   IsHeadLightEnabled="True"
							   >
            <HelixToolkit:DirectionalHeadLight Brightness="0.2"/>

            <ModelVisual3D Content="{Binding PreviewModel}"/>

        </HelixToolkit:HelixViewport3D>
        <Button Content="Reset View" 
        Click="ResetToFrontView_Click"
        Width="100" Height="30"
        HorizontalAlignment="Left" 
        VerticalAlignment="Top"
        Margin="20" 
        Background="#333333"
        Foreground="White"
        FontWeight="SemiBold"
        Cursor="Hand"/>

    </Grid>
</UserControl>