<UserControl x:Class="CorlaneCabinetOrderFormV3.Views.DefaultSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:CorlaneCabinetOrderFormV3.Views"
             xmlns:viewmodels="clr-namespace:CorlaneCabinetOrderFormV3.ViewModels"    
             xmlns:Converters="clr-namespace:CorlaneCabinetOrderFormV3.Converters"
             xmlns:Models="clr-namespace:CorlaneCabinetOrderFormV3.Models"
             mc:Ignorable="d" 
             d:DesignHeight="920" d:DesignWidth="1000"
             d:Background="{DynamicResource ABrush.Tone8.Background.Static}"
             Background="{DynamicResource ABrush.Tone1.Background.Static}">

    <Behaviors:Interaction.Triggers>
        <Behaviors:EventTrigger EventName="Unloaded">
            <Behaviors:InvokeCommandAction Command="{Binding SaveDefaultsCommand}" />
        </Behaviors:EventTrigger>
    </Behaviors:Interaction.Triggers>

    <!-- Design-time DataContext (so intellisense will work) -->
    <d:UserControl.DataContext>
        <viewmodels:DefaultSettingsViewModel/>
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Converters:BoolInverter x:Key="BoolInverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width=".8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <GroupBox Header="Theme Selection" Grid.Row="0" Grid.Column="0" Margin="10,5,5,5" VerticalAlignment="Top" HorizontalAlignment="Left" Width="150">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="comboThemes" ItemsSource="{Binding ThemeOptions}" SelectedItem="{Binding SelectedTheme}" Height="30" Width="130" Margin="5" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Dimensions" Grid.Row="0" Grid.Column="0" Margin="15,105,5,5" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="comboDefaultDimensions" Margin="5" ItemsSource="{Binding ListDimensionFormat}" SelectedItem="{Binding DefaultDimensionFormat}" HorizontalAlignment="Left" Width="110"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Back Thickness" Grid.Row="0" Grid.Column="0" Margin="185,5,5,5" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical">
                <Label Content="Base Cabinet:"/>
                <ComboBox x:Name="comboDefaultBaseBackThickness" Margin="5" ItemsSource="{Binding ListBackThickness}" SelectedItem="{Binding DefaultBaseBackThickness}"/>
                <Separator Margin="5,15,5,5"/>
                <Label Content="Upper Cabinet:" Margin="0,5,0,0"/>
                <ComboBox x:Name="comboDefaultUpperBackThickness" Margin="5" ItemsSource="{Binding ListBackThickness}" SelectedItem="{Binding DefaultUpperBackThickness}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Panel Thickness" Grid.Row="0" Grid.Column="0" Margin="185,200,5,5" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left">
            <StackPanel Orientation="Vertical">
                <ComboBox x:Name="comboDefaultPanelThickness" Margin="5" ItemsSource="{Binding ListBackThickness}" SelectedItem="{Binding DefaultPanelThickness}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Base Cabinet Top Type" Grid.Row="1" Grid.Column="2" Margin="5,240,5,5" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2">
            <ComboBox x:Name="comboDefaultTopType" Margin="5" ItemsSource="{Binding ListTopType}" SelectedItem="{Binding DefaultTopType}"/>
        </GroupBox>

        <GroupBox x:Name="groupDefaultDrawerFrontHeights" Grid.Row="2" Grid.Column="2" Header="Drw. Front Heights" Margin="5,85,5,5" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Top" VerticalAlignment="Top" Margin="5,0,0,0"/>

                <!-- Preserve theming by basing on the existing TextBox style -->
                <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="textDefaultDrwFront1Height"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Width="60"
                         Margin="3"
                         Text="{Binding DefaultDrwFrontHeight1, UpdateSourceTrigger=PropertyChanged}"
                         GotFocus="TextBoxGotFocus">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DefaultEqualizeAllDrwFronts}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <!--<Setter Property="Text" Value=""/>-->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Label Grid.Row="1" Grid.Column="0" Content="Second" VerticalAlignment="Top" Margin="5,0,0,0"/>

                <TextBox Grid.Row="1" Grid.Column="1"
                         x:Name="textDefaultDrwFront2Height"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Width="60"
                         Margin="3"
                         Text="{Binding DefaultDrwFrontHeight2, UpdateSourceTrigger=PropertyChanged}"
                         GotFocus="TextBoxGotFocus">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DefaultEqualizeBottomDrwFronts}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <!--<Setter Property="Text" Value=""/>-->
                                </DataTrigger>

                                <DataTrigger Binding="{Binding DefaultEqualizeAllDrwFronts}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <!--<Setter Property="Text" Value=""/>-->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Label Grid.Row="2" Grid.Column="0" Content="Third" VerticalAlignment="Top" Margin="5,0,0,0"/>

                <TextBox Grid.Row="2" Grid.Column="1"
                         x:Name="textDefaultDrwFront3Height"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Left"
                         Width="60"
                         Margin="3"
                         Text="{Binding DefaultDrwFrontHeight3, UpdateSourceTrigger=PropertyChanged}"
                         GotFocus="TextBoxGotFocus">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DefaultEqualizeBottomDrwFronts}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <!--<Setter Property="Text" Value=""/>-->
                                </DataTrigger>

                                <DataTrigger Binding="{Binding DefaultEqualizeAllDrwFronts}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <!--<Setter Property="Text" Value=""/>-->
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <ToggleButton Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Equalize Bottom Drw. Fronts" IsChecked="{Binding DefaultEqualizeBottomDrwFronts}" Margin="5"/>
                <ToggleButton Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="Equalize All Drw. Fronts" IsChecked="{Binding DefaultEqualizeAllDrwFronts}" Margin="5"/>

            </Grid>
        </GroupBox>

        <GroupBox Header="Species" Grid.Row="0" Grid.Column="1" Margin="-25,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Label Content="Species:" Margin="0,0,0,-8"/>
                    <ComboBox Name="comboCabinetSpecies" Margin="5" Width="170" ItemsSource="{Binding ListCabSpecies}" SelectedItem="{Binding DefaultSpecies}"/>
                    <Label Content="Edgebanding" Margin="0,0,0,-8"/>
                    <ComboBox Name="comboEBSpecies" Margin="5" Width="170" ItemsSource="{Binding ListEBSpecies}" SelectedValue="{Binding DefaultEBSpecies}"/>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <Label Content="Filler Species:" Margin="0,0,0,-8"/>
                    <ComboBox Name="comboFillerSpecies" Margin="5" Width="170" ItemsSource="{Binding ListCabSpecies}" SelectedItem="{Binding DefaultFillerSpecies}"/>
                    <Label Content="Panel Species:" Margin="0,0,0,-8"/>
                    <ComboBox Name="comboPanelSpecies" Margin="5" Width="170" ItemsSource="{Binding ListCabSpecies}" SelectedValue="{Binding DefaultPanelSpecies}"/>
                    <Label Content="Panel Edgebanding Species:" Margin="0,0,0,-8"/>
                    <ComboBox Name="comboPanelEBSpecies" Margin="5" Width="170" ItemsSource="{Binding ListEBSpecies}" SelectedValue="{Binding DefaultPanelEBSpecies}"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Toekick" Grid.Row="1" Grid.Column="2" Margin="5,60,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="defaultCheckHasTK" Margin="10" Content="Has Toekick" IsChecked="{Binding DefaultHasTK}"/>
                <Label Content="Toekick Height" Margin="5,5,5,0" HorizontalAlignment="Left"/>
                <TextBox x:Name="textDefaultTKHeight" Width="60" HorizontalAlignment="Left" Margin="12,0,5,0" GotFocus="TextBoxGotFocus"
                         Text="{Binding DefaultTKHeight}"/>
                <Label Content="Toekick Depth" Margin="5,5,5,0" HorizontalAlignment="Left"/>
                <TextBox x:Name="textDefaultTKDepth" Width="60" HorizontalAlignment="Left" Margin="12,0,5,5" GotFocus="TextBoxGotFocus"
                         Text="{Binding DefaultTKDepth}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Door/Drw. Front Reveals and Gaps" Grid.Row="1" Grid.Column="0" Margin="5,50,5,5" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Label Content="Base Cabinets:"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Left Reveal"/>
                    <TextBox x:Name="textDefaultBaseDoorLeftReveal" Margin="5" Width="65" Text="{Binding DefaulBasetLeftReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.0625" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Right Reveal"/>
                    <TextBox x:Name="textDefaultBaseDoorRightReveal" Margin="5" Width="65" Text="{Binding DefaultBaseRightReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.0625" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Top Reveal"/>
                    <TextBox x:Name="textDefaultBaseDoorTopReveal" Margin="5" Width="65" Text="{Binding DefaultBaseTopReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.4375" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Bottom Reveal"/>
                    <TextBox x:Name="textDefaultBaseDoorBottomReveal" Margin="5" Width="65" Text="{Binding DefaultBaseBottomReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.0625" FontStyle="Italic"/>
                </StackPanel>

                <Separator Margin="5,0,5,0"/>

                <Label Content="Upper Cabinets:"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Left Reveal"/>
                    <TextBox x:Name="textDefaultUpperDoorLeftReveal" Margin="5" Width="65" Text="{Binding DefaultUpperLeftReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.0625" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Label Content="Right Reveal"/>
                    <TextBox x:Name="textDefaultUpperDoorRightReveal" Margin="5" Width="65" Text="{Binding DefaultUpperRightReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.0625" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,7,0">
                    <Label Content="Top Reveal"/>
                    <TextBox x:Name="textDefaultUpperDoorTopReveal" Margin="5" Width="65" Text="{Binding DefaultUpperTopReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.125" FontStyle="Italic"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,7,0">
                    <Label Content="Bottom Reveal"/>
                    <TextBox x:Name="textDefaultUpperDoorBottomReveal" Margin="5" Width="65" Text="{Binding DefaultUpperBottomReveal}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.125" FontStyle="Italic"/>
                </StackPanel>
                <Separator Margin="5,0,5,5"/>
                <Label Content="All Cabinets Door Gaps:"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,7,0">
                    <Label Content="Gaps"/>
                    <TextBox x:Name="textDefaultUpperDoorGaps" Margin="5" Width="65" Text="{Binding DefaultGapWidth}" GotFocus="TextBoxGotFocus"/>
                    <Label Content="Recommended: 0.125" FontStyle="Italic"/>
                </StackPanel>

            </StackPanel>
        </GroupBox>

        <GroupBox Header="Drawers" Grid.Row="2" Grid.Column="1" Margin="5 40 20 5" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <Label Content="Std. Base:" Margin="0,0,0,-8"/>
                        <ComboBox Name="comboDefaultStdDrws" Width="85" HorizontalAlignment="Left" Margin="5,5,60,5"
                                  ItemsSource="{Binding ListStdDrwCount}" SelectedValue="{Binding DefaultStdDrawerCount}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Label Content="Drawer Base:" Margin="0,0,0,-8"/>
                        <ComboBox Name="comboDefaultDrwBaseDrws" Width="85" HorizontalAlignment="Left" Margin="5"
                                  ItemsSource="{Binding ListDrwStackDrwCount}" SelectedValue="{Binding DefaultDrawerStackDrawerCount}"/>
                    </StackPanel>
                </StackPanel>
                <CheckBox x:Name="checkDefaultDrillDrwSlideHoles" Content="Drill Drawer Slide Holes In Cabinet" Margin="5"
                          IsChecked="{Binding DefaultDrillSlideHoles}"/>
                <CheckBox x:Name="checkDefaultIncludeDrwBoxes" Content="Include Drawer Boxes With Cabinet" Margin="5" IsChecked="{Binding DefaultIncDrwBoxes}"/>
                <Label Content="Drawer Style:"/>
                <ComboBox x:Name="comboDefaultDrwStyle" Width="285" Margin="5" HorizontalAlignment="Left" ItemsSource="{Binding ListDrawerStyle}" SelectedValue="{Binding DefaultDrwStyle}"/>
                <CheckBox x:Name="checkDefaultIncludeInDrwBoxSizeList" Content="Include Drawer Boxes in Drw Box Size List" Margin="5"
                          IsChecked="{Binding DefaultIncDrwBoxesInList}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Doors/Drawer Fronts" Grid.Row="0" Grid.Column="1" Margin="5 205 20 5" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="3">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="checkDefaultIncludeDoorsInSizesList" Content="Include Doors/Drw Fronts In Door Sizes List" Margin="5"
                          IsChecked="{Binding DefaultIncDoorsInList}"/>
                <CheckBox x:Name="checkDefaultIncludeDoorsWithCabinet" Content="Include Slab Doors/Drw Fronts With Cabinet" Margin="5"
                          IsChecked="{Binding DefaultIncDoors}"/>
                <Label Content="Doors/Drw Front Species:"/>
                <ComboBox x:Name="comboDefaultDoorSpecies" Width="150" HorizontalAlignment="Left" Margin="5,0,5,5"
                          ItemsSource="{Binding ListCabSpecies}" SelectedValue="{Binding DefaultDoorDrwSpecies}"/>
                <CheckBox x:Name="checkDefaultDrillHingePlateHoles" Content="Drill Hinge Plate Mounting Holes In Cabinet" Margin="5"
                          IsChecked="{Binding DefaultDrillHingeHoles}"/>

                <Label Content="Door Grain Direction:"/>
                <ComboBox Name="defaultComboBaseDoorGrainDir" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,5"
                          ItemsSource="{Binding ListGrainDirection}" SelectedItem="{Binding DefaultDoorGrainDir}"/>

                <Label Content="Drawer Front Grain Direction:"/>
                <ComboBox Name="defaultComboDrwGrainDir" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,0,5"
                          ItemsSource="{Binding ListGrainDirection}" SelectedItem="{Binding DefaultDrwGrainDir}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Shelves" Grid.Row="0" Grid.Column="2" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">
                <Label Content="Base Shelf Count:"/>
                <ComboBox x:Name="comboDefaultShelves" Width="80" HorizontalAlignment="Left" Margin="5" ItemsSource="{Binding ListShelfCount}"
                          SelectedValue="{Binding DefaultShelfCount}"/>
                <ComboBox x:Name="comboDefaultShelfDepth" Margin="5" ItemsSource="{Binding ListShelfDepth}" SelectedItem="{Binding DefaultShelfDepth}"/>
                <TextBlock Text="Shelf Depth only applies to Base cabinet types." Width="100" TextWrapping="Wrap" Margin="5"/>
                <Separator Margin="5,0,5,0"/>
                <Label Content="Upper Shelf Count:"/>
                <ComboBox x:Name="comboDefaultUpperShelves" Width="80" HorizontalAlignment="Left" Margin="5" ItemsSource="{Binding ListShelfCount}"
                          SelectedValue="{Binding DefaultUpperShelfCount}"/>

                <CheckBox x:Name="checkDefaultDrillShelfHoles" Content="Drill Shelf Holes" IsChecked="{Binding DefaultDrillShelfHoles}" Margin="5,10,5,5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="NOTES:" Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0" Margin="15,40,15,15" FontSize="16" HorizontalAlignment="Left">
            <TextBlock x:Name="textDefaultsNotes" HorizontalAlignment="Left" Height="Auto" TextWrapping="Wrap" Margin="5" Padding="5" FontSize="12">
							Toekick Height only applies to base cabinets with integrated toekicks. It does not apply to "No Toekick" cabinets.
							Toekick Depth does not include the thickness of any applied face frame or toekick skin board.
                            <LineBreak/>
                            <LineBreak/>

                            IMPORTANT: Be sure you know what you are doing if you are setting custom door/drawer front reveal values. Incorrect values will result
                            in incorrectly sized doors and drawer fronts!
                            <LineBreak/>
                            Corlane will not be held responsible for incorrect door/drawer front sizes as a result of deviating from our recommended values.
            </TextBlock>
        </GroupBox>

    </Grid>

</UserControl>