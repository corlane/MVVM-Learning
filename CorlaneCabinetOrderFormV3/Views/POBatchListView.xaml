<UserControl x:Class="CorlaneCabinetOrderFormV3.Views.POBatchListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:CorlaneCabinetOrderFormV3.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="920"
             d:DesignWidth="1000"
             d:Background="{DynamicResource ABrush.Tone8.Background.Static}"
             Background="{DynamicResource ABrush.Tone1.Background.Static}">

    <d:UserControl.DataContext>
        <viewmodels:POBatchListViewModel />
    </d:UserControl.DataContext>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Batch List"
                   FontSize="18"
                   FontWeight="SemiBold"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal">
            <Button Content="Generate"
                    Command="{Binding GenerateCommand}"
                    MinWidth="120"
                    Margin="0,0,8,0"/>

            <Button Content="Save Batch List (.csv)"
                    Command="{Binding SaveCsvCommand}"
                    MinWidth="180"/>

            <TextBlock Margin="16,0,0,0"
                       VerticalAlignment="Center"
                       Text="{Binding TotalCabinetEntries, StringFormat=Total Qty: {0}}"/>
        </StackPanel>

        <DataGrid Grid.Row="4"
                  ItemsSource="{Binding Rows}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  FontSize="18"
                  FontFamily="Consolas"
                  Padding="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True"
                                    Width="2*"/>

                <DataGridTextColumn Header="Directory"
                                    Binding="{Binding Directory, UpdateSourceTrigger=PropertyChanged}"
                                    IsReadOnly="False"
                                    Width="2*"/>

                <DataGridTextColumn Header="Type"
                                    Binding="{Binding Type}"
                                    IsReadOnly="True"
                                    Width="*"/>

                <DataGridTextColumn Header="Quantity"
                                    Binding="{Binding Quantity}"
                                    IsReadOnly="True"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Height"
                                    Binding="{Binding Height}"
                                    IsReadOnly="True"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Width"
                                    Binding="{Binding Width}"
                                    IsReadOnly="True"
                                    Width="Auto"/>

                <DataGridTextColumn Header="Depth"
                                    Binding="{Binding Depth}"
                                    IsReadOnly="True"
                                    Width="Auto"/>

                <DataGridTextColumn Header="New Name"
                                    Binding="{Binding NewName}"
                                    IsReadOnly="True"
                                    Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="5"
                   Margin="0,8,0,0"
                   TextWrapping="Wrap"
                   Opacity="0.8"
                   Text="Edit Directory cells if needed, then Save to CSV."/>
    </Grid>
</UserControl>