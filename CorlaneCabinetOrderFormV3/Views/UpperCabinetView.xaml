<UserControl x:Class="CorlaneCabinetOrderFormV3.Views.UpperCabinetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CorlaneCabinetOrderFormV3.Views"
             xmlns:viewmodels="clr-namespace:CorlaneCabinetOrderFormV3.ViewModels"  
             xmlns:Converters="clr-namespace:CorlaneCabinetOrderFormV3.Converters"
             xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="920" d:DesignWidth="1000"
             d:Background="{DynamicResource ABrush.Tone8.Background.Static}"
             Background="{DynamicResource ABrush.Tone1.Background.Static}"             
             >

    <!-- Design-time DataContext (add this block) -->
    <d:UserControl.DataContext>
        <viewmodels:UpperCabinetViewModel/>
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <Converters:BoolInverter x:Key="BoolInverter"/>
        <Converters:StringToIntConverter x:Key="StringToIntConverter"/>
    </UserControl.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="155"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <GroupBox Grid.Row="0" Grid.Column="0" Margin="5,5,5,5" Header="Upper Cabinet Style" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBox Name="comboUpperCabType" Width="132" Margin="0,10,0,10" ItemsSource="{Binding TypeList}" SelectedValue="{Binding Style, UpdateSourceTrigger=PropertyChanged}">
                <behaviors:Interaction.Triggers>
                    <behaviors:EventTrigger EventName="DropDownClosed">
                        <behaviors:InvokeCommandAction Command="{Binding LoadDefaultsCommand}"/>
                    </behaviors:EventTrigger>
                </behaviors:Interaction.Triggers>
            </ComboBox>
        </GroupBox>

        <GroupBox x:Name="groupUpperDimensions" Grid.Column="1" Grid.Row="0" Header="Dimensions" Margin="5"
                                      Visibility="{Binding StandardDimsVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Width" HorizontalAlignment="Left" Margin="5,5,3,0"/>
                    <TextBox x:Name="textWidthUpper" Width="50" HorizontalAlignment="Right" VerticalAlignment="Center" GotFocus="TextBoxGotFocus"
                                                 Text="{Binding Width, UpdateSourceTrigger=PropertyChanged}"/>

                </StackPanel>
                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textWidthUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textWidthUpper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Height" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textHeightUpper" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" GotFocus="TextBoxGotFocus"
                                                 Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textHeightUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textHeightUpper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Depth" Margin="5,0,4,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textDepthUpper" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center" GotFocus="TextBoxGotFocus"
                                                 Text="{Binding Depth, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textDepthUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textDepthUpper, FallbackValue=''}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="groupUpper90CornerDimensions" Grid.Column="1" Grid.Row="0" Header="Dimensions" Margin="5"
                                      Visibility="{Binding Corner90DimsVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Content="Left Front Width" HorizontalAlignment="Left" Margin="5,5,0,0"/>
                    <TextBox x:Name="textLeftFrontWidthUpper" Width="65" VerticalAlignment="Center" Margin="11,0,0,0" 
                                                 Text="{Binding LeftFrontWidth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textLeftFrontWidthUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textLeftFrontWidthUpper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Right Front Width" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textRightFrontWidthUpper" Width="65"  VerticalAlignment="Center" Margin="3,0,0,0" 
                                                 Text="{Binding RightFrontWidth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textRightFrontWidthUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textRightFrontWidthUpper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Content="Left Depth" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textLeftDepthUpper" Width="65"  VerticalAlignment="Center" Margin="43,0,0,0" 
                                                 Text="{Binding LeftDepth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textLeftDepthUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textLeftDepthUpper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Right Depth" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textRightDepthUpper" Width="65" VerticalAlignment="Center" Margin="35,0,0,0" 
                                                 Text="{Binding RightDepth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textRightDepthUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textRightDepthUpper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Left Back Width" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textLeftBackWidthUpper" Width="65" Text="{Binding LeftBackWidth90}" VerticalAlignment="Center" Margin="16,0,0,0" IsReadOnly="True" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Right Back Width" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textRightBackWidthUpper" Width="65" Text="{Binding RightBackWidth90}" VerticalAlignment="Center" Margin="8,0,0,0" IsReadOnly="True" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Height" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textHeightCornerUpper" Width="65"  VerticalAlignment="Center" Margin="64,0,0,0" 
                                                 Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textHeightCornerUpper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textHeightCornerUpper, FallbackValue=''}"/>

            </StackPanel>
        </GroupBox>

        <GroupBox x:Name="groupUpper45CornerDimensions" Grid.Column="1" Grid.Row="0" Header="Dimensions" Margin="5"
									      Visibility="{Binding Corner45DimsVisibility, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Content="Left Depth" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textLeftDepth45Upper" Width="65" VerticalAlignment="Center" Margin="42,0,0,0" 
                                                 Text="{Binding LeftDepth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textLeftDepth45Upper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textLeftDepth45Upper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Right Depth" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textRightDepth45Upper" Width="65" VerticalAlignment="Center" Margin="34,0,0,0" 
                                                 Text="{Binding RightDepth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textRightDepth45Upper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textRightDepth45Upper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Label Content="Left Back Width" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textLeftBackWidth45Upper" Width="65" VerticalAlignment="Center" Margin="15,0,0,0" 
                                                 Text="{Binding LeftBackWidth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textLeftBackWidth45Upper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textLeftBackWidth45Upper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Right Back Width" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textRightBackWidth45Upper" Width="65" VerticalAlignment="Center" Margin="7,0,0,0" 
                                                 Text="{Binding RightBackWidth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textRightBackWidth45Upper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textRightBackWidth45Upper, FallbackValue=''}"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="Front Width" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textFrontWidth45Upper" Width="65" Text="{Binding FrontWidth}" VerticalAlignment="Center" Margin="35,0,0,0" IsReadOnly="True" IsEnabled="False"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Height" Margin="5,0,0,0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textHeightCorner45Upper" Width="65" VerticalAlignment="Center" Margin="63,0,0,0" 
                                                 Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" 
                                               Visibility="{Binding (Validation.HasError), ElementName=textHeightCorner45Upper, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textHeightCorner45Upper, FallbackValue=''}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Species" Grid.Row="0" Grid.Column="2" Margin="10,5,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" >
            <StackPanel Orientation="Vertical">
                <Label Content="Species:" Margin="0,0,0,-8"/>
                <ComboBox Name="comboUpperCabinetSpecies" Margin="5" Width="190" ItemsSource="{Binding ListCabSpecies}" SelectedItem="{Binding Species}"/>
                <Label Content="Edgebanding" Margin="0,0,0,-8"/>
                <ComboBox Name="comboUpperEBSpecies" Margin="5" Width="190" ItemsSource="{Binding ListEBSpecies}" SelectedValue="{Binding EBSpecies}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Shelves" Grid.Row="0" Grid.Column="3" Margin="215,5,5,5" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">
                <ComboBox Name="comboShelvesUpper" Width="80" HorizontalAlignment="Left" Margin="5" 
                                                      ItemsSource="{Binding ComboShelfCount}" SelectedItem="{Binding ShelfCount}"/>
                <CheckBox x:Name="checkDrillShelfHolesUpper" Content="Drill Shelf Holes" Margin="5" IsChecked="{Binding DrillShelfHoles}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Back Thickness" Grid.Row="0" Grid.Column="3" Margin="210,120,5,5" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.RowSpan="2" Visibility="{Binding BackThicknessVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <ComboBox x:Name="comboUpperBackThickness" Width="110" Margin="5" ItemsSource="{Binding ListBackThickness}" SelectedItem="{Binding BackThickness}"/>
        </GroupBox>

        <GroupBox Header="Doors" Grid.Row="0" Grid.Column="3" Margin="-30,5,5,5" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical">


                <StackPanel Orientation="Vertical">
                    <Label Content="Door Species:"/>
                    <ComboBox x:Name="comboUpperDoorSpecies" Margin="5,0,5,5" Width="150" HorizontalAlignment="Left" ItemsSource="{Binding ListCabSpecies}" 
                                              SelectedItem="{Binding DoorSpecies}"/>

                    <StackPanel Orientation="Horizontal">
                        <Label Content="No. of Doors:" VerticalAlignment="Center"/>
                        <ComboBox Name="comboDoorCount" Width="45" HorizontalAlignment="Left" Margin="5"
                                          ItemsSource="{Binding ListDoorCount, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" SelectedItem="{Binding DoorCount}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Content="Door Grain Direction:" VerticalAlignment="Center"/>
                        <ComboBox Name="comboBaseDoorGrainDir" Width="100" HorizontalAlignment="Left" Margin="0,5,5,5"
                                          ItemsSource="{Binding ListGrainDirection}" SelectedItem="{Binding DoorGrainDir}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    </StackPanel>
                    <CheckBox x:Name="checkIncludeDoorsWithCabinet" Content="Supply Slab Doors With Cabinet" Margin="5" IsChecked="{Binding IncDoors}"/>
                    <CheckBox x:Name="checkIncludeDoorsInSizesList" Content="Include Doors In Sizes List" Margin="5" IsChecked="{Binding IncDoorsInList}"/>
                    <CheckBox x:Name="checkDrillHingePlateHoles" Content="Drill Hinge Plate Mounting Holes" Margin="5" IsChecked="{Binding DrillHingeHoles}"/>
                    <StackPanel Orientation="Horizontal">
                    </StackPanel>
                </StackPanel>



            </StackPanel>

        </GroupBox>

        <GroupBox Grid.Row="0" Grid.Column="3" Header="Door Reveals" Margin="-30,250,5,5" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2">
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Label Content="Left Reveal" Grid.Row="0" Grid.Column="0" Margin="0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textBaseDoorLeftReveal" Grid.Row="0" Grid.Column="1" Margin="0" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding LeftReveal, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>

                    <Label Content="Right Reveal" Grid.Row="1" Grid.Column="0" Margin="0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textBaseDoorRightReveal" Grid.Row="1" Grid.Column="1" Margin="0" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding RightReveal, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>

                    <Label Content="Top Reveal" Grid.Row="2" Grid.Column="0" Margin="0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textBaseDoorTopReveal" Grid.Row="2" Grid.Column="1" Margin="0" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding TopReveal, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>

                    <Label Content="Bottom Reveal" Grid.Row="3" Grid.Column="0" Margin="0" HorizontalAlignment="Left"/>
                    <TextBox x:Name="textBaseDoorBottomReveal" Grid.Row="3" Grid.Column="1" Margin="0" Width="60" HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding BottomReveal, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>

                    <Label Content="Door Gaps" Grid.Row="0" Grid.Column="3" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                    <TextBox x:Name="textBaseDoorGaps" Grid.Row="1" Grid.Column="2" Margin="5,5,5,5" Width="60" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding GapWidth, UpdateSourceTrigger=PropertyChanged}" GotFocus="TextBoxGotFocus"/>
                </Grid>
            </StackPanel>

        </GroupBox>









        <GroupBox Header="Special instructions/notes for this item" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Width="350" Height="160" Margin="25,45,10,200" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.RowSpan="2">
            <TextBox x:Name="textUpperCabNotes" Margin="5" IsReadOnly="False" TextWrapping="Wrap" Text="{Binding Notes}"/>
        </GroupBox>

        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Bottom" Grid.ColumnSpan="2">

            <StackPanel Orientation="Vertical" Margin="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top">
                    <Button x:Name="buttonLoadDefaults" Content="Load Defaults" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,125,5" Command="{Binding LoadDefaultsCommand, Mode=OneWay}"/>

                    <Label Content="Quantity:" Margin="5"/>
                    <TextBox x:Name="textQty" Width="40" Height="25" VerticalAlignment="Center" Margin="0" 
             Text="{Binding Qty,
                            UpdateSourceTrigger=PropertyChanged,
                            Converter={StaticResource StringToIntConverter}}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>
                <TextBlock FontSize="12" Foreground="Red" Margin="5 0 0 0" HorizontalAlignment="Right"
                                               Visibility="{Binding (Validation.HasError), ElementName=textQty, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Text="{Binding (Validation.Errors)[0].ErrorContent, ElementName=textQty, FallbackValue=''}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top">
                    <Label Content="Name:" VerticalAlignment="Top" Margin="5"/>
                    <TextBox x:Name="textNameUpper" Width="140" Height="25" VerticalAlignment="Center" Margin="0" 
                                             Text="{Binding Name}" GotFocus="TextBoxGotFocus"/>
                </StackPanel>

                <Button x:Name="buttonAddUpper" Content="Add to List" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Padding="5" IsEnabled="{Binding HasErrors, Converter={StaticResource BoolInverter}}"
                                            Command="{Binding AddCabinetCommand}"/>
                <Button x:Name="buttonUpdateUpper" Content="Update in List" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Padding="5" IsEnabled="{Binding HasErrors, Converter={StaticResource BoolInverter}}"
                                            Command="{Binding UpdateCabinetCommand}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>