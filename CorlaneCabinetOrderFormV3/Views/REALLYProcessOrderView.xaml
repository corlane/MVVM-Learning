<UserControl x:Class="CorlaneCabinetOrderFormV3.Views.REALLYProcessOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewmodels="clr-namespace:CorlaneCabinetOrderFormV3.ViewModels"
             xmlns:views="clr-namespace:CorlaneCabinetOrderFormV3.Views"
             mc:Ignorable="d"
             d:DesignHeight="920" d:DesignWidth="1000"
             d:Background="{DynamicResource ABrush.Tone8.Background.Static}"
             Background="{DynamicResource ABrush.Tone1.Background.Static}">

    <d:UserControl.DataContext>
        <viewmodels:REALLYProcessOrderViewModel/>
    </d:UserControl.DataContext>
    
    <Grid>
        <TabControl Margin="0,10,0,0">
            
            <TabItem Header="Customer Info" Padding="10">
                <views:POCustomerInfoView DataContext="{Binding POCustomerInfoVm}"/>
            </TabItem>

            <TabItem Header="Batch List" Padding="10">

            </TabItem>

            <TabItem Header="Job Material List" Padding="10">
                <views:POJobMaterialListView DataContext="{Binding POJobMaterialListVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Toekick"
                   Foreground="{Binding POToekickVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:POToekickView DataContext="{Binding POToekickVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Edgebanding"
                               Foreground="{Binding POEdgebandingVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:POEdgebandingView DataContext="{Binding POEdgebandingVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Hinge Holes"
                               Foreground="{Binding POHingeHolesVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:POHingeHolesView DataContext="{Binding POHingeHolesVm}"/>
            </TabItem>

            <TabItem Header="Drawer Boxes" Padding="10">

            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Cabinet Species"
                   Foreground="{Binding POCabinetSpeciesVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:POCabinetSpeciesView DataContext="{Binding POCabinetSpeciesVm}"/>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <TextBlock Text="Include Doors"
                   Foreground="{Binding POIncludeDoorsVm.TabHeaderBrush}"/>
                </TabItem.Header>
                <views:POIncludeDoorsView DataContext="{Binding POIncludeDoorsVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Door Species"
                   Foreground="{Binding PODoorSpeciesVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:PODoorSpeciesView DataContext="{Binding PODoorSpeciesVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Corner Cabinet Dims"
                   Foreground="{Binding POCornerCabinetDimsVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:POCornerCabinetDimsView DataContext="{Binding POCornerCabinetDimsVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Notes"
                               Foreground="{Binding PONotesVm.TabHeaderBrush}" />
                </TabItem.Header>
                <views:PONotesView DataContext="{Binding PONotesVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Reveals/Gaps"
                               Foreground="{Binding PORevealsGapsVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:PORevealsGapsView DataContext="{Binding PORevealsGapsVm}"/>
            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Door/Drw Grain Dir."
                               Foreground="{Binding PODoorDrwGrainDirVm.TabHeaderBrush}" />
                </TabItem.Header>

                <views:PODoorDrwGrainDirView DataContext="{Binding PODoorDrwGrainDirVm}"/>
            </TabItem>

            <TabItem Header="Opening/Drw Front Heights" Padding="10">

            </TabItem>

            <TabItem Padding="10">
                <TabItem.Header>
                    <TextBlock Text="Base Cab Top Type"
                               Foreground="{Binding POBaseCabTopTypeVm.TabHeaderBrush}" />
                </TabItem.Header>
                <views:POBaseCabTopTypeView DataContext="{Binding POBaseCabTopTypeVm}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
